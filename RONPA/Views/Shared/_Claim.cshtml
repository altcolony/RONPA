@model RONPA.ViewModels.ClaimVM

<div class="jumbotron jumbotron-fluid">
    <div class="container">
        <p class="lead">@Model.Text</p>
        @if (Model.IsCardDisplay)
        {
            <div class="row">
                @for (int i = 0; i < Model.CardVMs.Count; i++)
                {
                    <partial name="_Card" model="Model.CardVMs[i]" />
                }
            </div>
        }
    </div>
</div>